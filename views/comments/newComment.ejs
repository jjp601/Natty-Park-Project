<% include ../partials/header %>

    <div class="row">
        <h1 class="form-title">Add New Comment to <%= park.name %></h1>
        <div class="format">
            <form action="/parks/<%= park._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[content]" placeholder="content">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Post</button>
                </div>   
            </form>
            <a href="/parks">Go Back</a>
        </div>
    </div>

<% include ../partials/footer %>