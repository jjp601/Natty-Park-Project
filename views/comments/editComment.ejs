<% include ../partials/header %>

    <div class="row">
        <h1 class="form-title">Edit Comment</h1>
        <div class="format">
            <form action="/parks/<%= park_id %>/comments/<%=comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%=comment.content %>" name="comment[content]" placeholder="text">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/parks">Go Back</a>
        </div>
    </div>
    
<% include ../partials/footer %>