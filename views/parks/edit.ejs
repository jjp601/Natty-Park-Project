<% include ../partials/header %>


    <div class="row">
        <h1 class="form-title">Edit <%= park.name %></h1>
        <div class="format">
            <form action="/parks/<%= park._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" name="park[name]" id="name" value="<%= park.name %>">
                </div>
                <div class="form-group">
                    <label for="price">Price</label>
                    <input class="form-control" type="number" name="park[price]" id="price" value="<%= park.price %>" min="0.00" step="0.25">
                </div>
                <div class="form-group">
                    <label for="image">Image URL</label>
                    <input class="form-control" type="text" name="park[image]" id="image" value="<%= park.image %>">
                </div>
                <div class="form-group">
                    <label for="details">Details</label>
                    <input class="form-control" type="text" name="park[details]" id="details" value="<%= park.details %>">
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" value="<%= park.location %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update</button>
                </div>    
            </form>
            <a href="/parks">Go Back</a>
        </div>
    </div>


<% include ../partials/footer %>